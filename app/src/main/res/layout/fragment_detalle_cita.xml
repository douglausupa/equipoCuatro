<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context="detallecita.DetalleCitaFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <!-- Título personalizado -->
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/editarcita"
        android:textAppearance="@style/toolbarTitle"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"/>

    <!-- Botón de retroceso -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowback"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:contentDescription="@string/devolver"
        app:tint="@color/buttonBackgroundColor"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetallesCita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- El TextView posicionado en la esquina superior derecha -->
            <TextView
                android:id="@+id/tvTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="#1"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="90dp"
                android:text="Raza:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvSintomas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Síntomas:"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/pink"/>

            <TextView
                android:id="@+id/tvPropietario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propietario:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono:"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Botón flotante Editar -->
    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_pencil"
        android:background="@drawable/boton_negro_redondeado"
        android:elevation="6dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/editarcita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón flotante eliminar -->
       <ImageButton
        android:id="@+id/fabEliminar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:backgroundTint="@color/red"
        android:src="@drawable/ic_delete"
        android:background="@drawable/boton_rojo_redondeado"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:contentDescription="@string/eliminarcita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CardView - Imagen Mascota-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMascota"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
         app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>